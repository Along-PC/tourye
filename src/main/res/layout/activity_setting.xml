<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFEBEBEB"
    tools:context="com.tourye.zhong.ui.activity.SettingActivity">

    <RelativeLayout
        android:id="@+id/rl_activity_setting_message"
        android:background="@color/color_font_white"
        android:paddingLeft="@dimen/size_14"
        android:paddingRight="@dimen/size_14"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44">

        <TextView
            android:layout_weight="1"
            android:text="消息通知"
            android:textSize="@dimen/font_14"
            android:gravity="center_vertical"
            android:textColor="@color/color_font_black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:background="@drawable/icon_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/size_24"
            android:layout_height="@dimen/size_24" />

        <View
            android:background="#FFEBEBEB"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_activity_setting_bind"
        android:background="@color/color_font_white"
        android:paddingLeft="@dimen/size_14"
        android:paddingRight="@dimen/size_14"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44">
        <TextView
            android:layout_weight="1"
            android:text="手机绑定"
            android:textSize="@dimen/font_14"
            android:gravity="center_vertical"
            android:textColor="@color/color_font_black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:background="@drawable/icon_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/size_24"
            android:layout_height="@dimen/size_24" />
    </RelativeLayout>

    <View
        android:background="#FFEBEBEB"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_10"/>

    <RelativeLayout
        android:id="@+id/rl_activity_setting_business"
        android:background="@color/color_font_white"
        android:paddingLeft="@dimen/size_14"
        android:paddingRight="@dimen/size_14"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44">
        <TextView
            android:layout_weight="1"
            android:text="商务合作"
            android:textSize="@dimen/font_14"
            android:gravity="center_vertical"
            android:textColor="@color/color_font_black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:background="@drawable/icon_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/size_24"
            android:layout_height="@dimen/size_24" />

        <View
            android:background="#FFEBEBEB"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_activity_setting_cache"
        android:background="@color/color_font_white"
        android:paddingLeft="@dimen/size_14"
        android:paddingRight="@dimen/size_14"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44">
        <TextView
            android:layout_weight="1"
            android:text="清除缓存"
            android:textSize="@dimen/font_14"
            android:gravity="center_vertical"
            android:textColor="@color/color_font_black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:background="@drawable/icon_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/size_24"
            android:layout_height="@dimen/size_24" />

        <View
            android:background="#FFEBEBEB"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_activity_setting_help"
        android:background="@color/color_font_white"
        android:paddingLeft="@dimen/size_14"
        android:paddingRight="@dimen/size_14"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44">
        <TextView
            android:layout_weight="1"
            android:text="帮助与吐槽"
            android:textSize="@dimen/font_14"
            android:gravity="center_vertical"
            android:textColor="@color/color_font_black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:background="@drawable/icon_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/size_24"
            android:layout_height="@dimen/size_24" />
    </RelativeLayout>

    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0"/>

    <TextView
        android:id="@+id/tv_activity_setting_exit"
        android:text="退出登录"
        android:textColor="@color/color_font_white"
        android:textSize="@dimen/font_16"
        android:gravity="center"
        android:background="@drawable/shape_login_bt_checked"
        android:layout_marginBottom="@dimen/size_30"
        android:layout_marginLeft="@dimen/size_20"
        android:layout_marginRight="@dimen/size_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_46" />

</LinearLayout>
